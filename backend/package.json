{
  "name": "backend",
  "version": "1.0.0",
  "description": "Multi-Currency Expense Operating Backend",
  "license": "ISC",
  "author": "Satyam kumar singh",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:currency": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/currency.test.js",
    "test:settlement": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/settlement.test.js",
    "test:settlement-history": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/settlement-history.test.js",
    "test:record-settlement": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/record-settlement.test.js",
    "test:all": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:insert-samples": "node scripts/insertSampleUsers.js",
    "db:list": "node scripts/listUsers.js",
    "db:insert": "node scripts/insertUser.js"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js"
    ]
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.2",
    "multer": "^2.0.2",
    "nodemon": "^3.1.11"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.1",
    "supertest": "^7.2.2"
  }
}
